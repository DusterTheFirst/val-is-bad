{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2017",
        "outDir": "build",
        "pretty": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "removeComments": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "rootDir": "src"
    },
    "formatCodeOptions": {
        "identSize": 2,
        "tabSize": 2
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}